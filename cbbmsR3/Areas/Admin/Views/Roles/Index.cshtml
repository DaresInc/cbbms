@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}
<h2>Roles Listing </h2>
@Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Role", "ManageUserRoles")
<hr />

<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>
            @Html.Label("Role Name")
        </th>
        <th>
            @Html.Label("Action")
        </th>
    </tr>

    @foreach (var role in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            <td>
                <span onclick="return confirm('Are you sure to delete?')">
                    <a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a>
                </span> | @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name }) |
                @Html.ActionLink("Details", "RoleUsers", new { roleName = role.Name }) |
                @Html.ActionLink("Delete", "Delete", new { roleName = role.Name })
            </td>
        </tr>
    }
</table>

