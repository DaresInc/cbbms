@model IEnumerable<cbbmsR3.Models.ApplicationUser>
    @{
//ViewBag.Title = "Role Users";
    }

<h2>Role User Listing </h2>
<hr />

<table class="table table-hover table-responsive table-striped table-bordered">
    <tr>
        <th>
            @Html.Label("User Name")
        </th>
        <th>
            @Html.Label("Email")
        </th>
        <th>
            @Html.Label("Phone Number")
        </th>
        <th>
            @Html.Label("Action")
        </th>
    </tr>

    @foreach (var usr in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => usr.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => usr.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => usr.PhoneNumber)
            </td>
            <td>
                <span onclick="return confirm('Are you sure to delete?')">
                    <a href="/Roles/Delete?RoleName=@usr.UserName" class="delLink" style="color:red;">Delete</a>
                </span> | @Html.ActionLink("Edit", "Edit", new { userName = @usr.UserName }) |
                @Html.ActionLink("Details", "Details", new { userName = usr.UserName }) |
                @Html.ActionLink("Delete", "Delete", new { userName = usr.UserName })
            </td>
        </tr>
    }
</table>